<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.ninjaone.rmm.services.domain.model.Service" table="services">
        <composite-id name="id" class="com.ninjaone.rmm.services.domain.model.ServiceId" access="field">
            <key-property column="id" name="value" length="36" access="field" />
        </composite-id>

        <component name="name" class="com.ninjaone.rmm.services.domain.model.ServiceName" access="field">
            <property name="value" column="name" type="string" access="field" />
        </component>

        <set name="costs" table="service_costs" cascade="all" access="field" fetch="join" lazy="false">
            <key>
                <column name="service_id" not-null="true"/>
            </key>
            <one-to-many class="com.ninjaone.rmm.services.domain.model.ServiceCost"/>
        </set>
    </class>
</hibernate-mapping>
